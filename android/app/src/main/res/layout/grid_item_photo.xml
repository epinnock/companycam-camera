<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/grid_item_photo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.notagilx.companycam.util.views.SquareImageView
        android:id="@+id/photo_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/photo_comment_indicator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/photo_image"
        android:layout_alignEnd="@id/photo_image"
        android:layout_alignRight="@id/photo_image"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/add_comment"/>

    <ImageView
        android:id="@+id/checkmark"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/photo_image"
        android:layout_alignLeft="@id/photo_image"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/checkmark_blue"
        android:visibility="invisible"
        tools:ignore="RtlHardcoded"/>

    <TextView
        android:id="@+id/debug_photo_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/white"
        android:visibility="invisible"/>
</RelativeLayout>