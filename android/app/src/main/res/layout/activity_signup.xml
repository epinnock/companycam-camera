<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity"
    android:background="@drawable/blue_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <RelativeLayout
            android:id="@+id/signupContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/logo_new" />


            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/CompanyCamTheme.MaterialEditText.White"
                android:id="@+id/textCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:inputType="textCapSentences"
                android:hint="@string/hint_company"
                android:background="#ffffff"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/CompanyCamTheme.MaterialEditText.White"
                android:id="@+id/textFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textCompany"
                android:layout_marginTop="5dp"
                android:inputType="textCapSentences"
                android:ems="10"
                android:layout_centerHorizontal="true"
                android:layout_alignLeft="@id/textCompany"
                android:layout_alignRight="@id/textCompany"
                android:layout_alignStart="@id/textCompany"
                android:layout_alignEnd="@id/textCompany"
                android:hint="@string/hint_first_name"
                android:background="#ffffff"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/CompanyCamTheme.MaterialEditText.White"
                android:id="@+id/textLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textFirstName"
                android:layout_marginTop="5dp"
                android:inputType="textCapSentences"
                android:ems="10"
                android:layout_centerHorizontal="true"
                android:layout_alignLeft="@id/textCompany"
                android:layout_alignRight="@id/textCompany"
                android:layout_alignStart="@id/textCompany"
                android:layout_alignEnd="@id/textCompany"
                android:hint="@string/hint_last_name"
                android:background="#ffffff"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/CompanyCamTheme.MaterialEditText.White"
                android:id="@+id/textEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textLastName"
                android:layout_marginTop="5dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:layout_centerHorizontal="true"
                android:layout_alignLeft="@id/textCompany"
                android:layout_alignRight="@id/textCompany"
                android:layout_alignStart="@id/textCompany"
                android:layout_alignEnd="@id/textCompany"
                android:hint="@string/hint_email"
                android:background="#ffffff"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/CompanyCamTheme.MaterialEditText.White"
                android:id="@+id/textPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textEmail"
                android:layout_marginTop="5dp"
                android:maxLength="10"
                android:inputType="phone"
                android:ems="10"
                android:layout_centerHorizontal="true"
                android:layout_alignLeft="@id/textCompany"
                android:layout_alignRight="@id/textCompany"
                android:layout_alignStart="@id/textCompany"
                android:layout_alignEnd="@id/textCompany"
                android:hint="@string/hint_phone_number"
                android:background="#ffffff"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/CompanyCamTheme.MaterialEditText.White"
                android:id="@+id/textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:inputType="textPassword"
                android:ems="10"
                android:layout_centerHorizontal="true"
                android:layout_alignLeft="@id/textCompany"
                android:layout_alignRight="@id/textCompany"
                android:layout_alignStart="@id/textCompany"
                android:layout_alignEnd="@id/textCompany"
                android:layout_below="@id/textPhoneNumber"
                android:hint="@string/password"
                android:background="#ffffff"/>

            <Button
                style="@style/CompanyCamTheme.Button.WhiteBox"
                android:id="@+id/createAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_account"
                android:layout_below="@id/textPassword"
                android:layout_marginTop="30dp"
                android:layout_alignLeft="@id/textCompany"
                android:layout_alignRight="@id/textCompany"
                android:layout_alignStart="@id/textCompany"
                android:layout_alignEnd="@id/textCompany"/>


            <Button
                android:id="@+id/cancel"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/createAccount"
                android:layout_marginTop="20dp"
                android:text="@string/cancel"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </ScrollView>
    
    <ProgressBar
        android:id="@+id/signupProgress"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>
