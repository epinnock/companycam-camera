<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/screen_flash_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="#ffffff"
        android:alpha="0"/>

    <com.agilx.companycam.util.views.FocusIndicatorView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/focus_indicator_view"
        android:layout_centerInParent="false"
        android:visibility="invisible">

    </com.agilx.companycam.util.views.FocusIndicatorView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:id="@+id/resolution_layout"
        android:background="#aa000000"
        android:layout_width="150dp"
        android:layout_marginLeft="-150dp">

        <com.agilx.companycam.util.views.VerticalTextView
            android:id="@+id/resolution_title"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="Choose photo resolution setting."
            android:textColor="@android:color/white"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="normal"
            android:textSize="18sp"
            android:layout_marginRight="-10dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/resolution_button_layout"
            android:layout_marginRight="-20dp"
            android:layout_marginLeft="-20dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/super_fine_icon"
                android:background="#00000000"
                android:id="@+id/super_button"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/high_icon"
                android:background="#00000000"
                android:id="@+id/high_button"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="80dp"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/normal_on_icon"
                android:background="#00000000"
                android:id="@+id/normal_button"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/resolution_text_layout_1"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="-5dp">

            <com.agilx.companycam.util.views.VerticalTextView
                android:id="@+id/resolution_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best for everyday use."
                android:textColor="@android:color/white"
                android:textStyle="italic"/>

            <com.agilx.companycam.util.views.VerticalTextView
                android:id="@+id/resolution_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smallest file size.  Uses least data."
                android:textColor="@android:color/white"
                android:textStyle="italic"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/resolution_text_layout_2"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="-5dp"
            android:visibility="gone">

            <com.agilx.companycam.util.views.VerticalTextView
                android:id="@+id/resolution_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best for balancing image quality and file size."
                android:textColor="@android:color/white"
                android:textStyle="italic"/>

            <com.agilx.companycam.util.views.VerticalTextView
                android:id="@+id/resolution_text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uses more data."
                android:textColor="@android:color/white"
                android:textStyle="italic"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/resolution_text_layout_3"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="-5dp"
            android:visibility="gone">

            <com.agilx.companycam.util.views.VerticalTextView
                android:id="@+id/resolution_text_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best for capturing great details."
                android:textColor="@android:color/white"
                android:textStyle="italic"/>

            <com.agilx.companycam.util.views.VerticalTextView
                android:id="@+id/resolution_text_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Largest file size.  Uses the most data."
                android:textColor="@android:color/white"
                android:textStyle="italic"/>
        </LinearLayout>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/chevron_left_icon"
            android:id="@+id/resolution_dismiss_button"
            android:background="#66000000"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#aa000000"
        android:layout_height="150dp"
        android:id="@+id/resolution_layout_land"
        android:layout_marginTop="-150dp">

        <TextView
            android:id="@+id/resolution_title_land"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Choose photo resolution setting."
            android:textColor="@android:color/white"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="normal"
            android:textSize="18sp"
            android:layout_marginBottom="-5dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/resolution_button_layout_land"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/normal_on_icon"
                android:background="#00000000"
                android:id="@+id/normal_button_land"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/high_icon"
                android:background="#00000000"
                android:id="@+id/high_button_land"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/super_fine_icon"
                android:background="#00000000"
                android:id="@+id/super_button_land"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/resolution_text_layout_land"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="-5dp">

            <TextView
                android:id="@+id/resolution_text_1_land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best for everyday use."
                android:textColor="@android:color/white"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/resolution_text_2_land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smallest file size.  Uses least data."
                android:textColor="@android:color/white"
                android:textStyle="italic"/>
        </LinearLayout>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/chevron_up_icon"
            android:id="@+id/resolution_dismiss_button_land"
            android:background="#66000000"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/top_layout"
        android:padding="10dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <ImageButton
                android:layout_width="match_parent"
                app:srcCompat="@drawable/size_icon"
                android:id="@+id/toggle_resolution"
                android:background="#00000000"
                android:padding="10dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

            <LinearLayout
                android:id="@+id/label_touch_target"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:textAlignment="center"
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1">

                <com.agilx.companycam.util.views.VerticalTextView
                    android:id="@+id/place_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Project"
                    android:textColor="@android:color/white"
                    />

                <com.agilx.companycam.util.views.VerticalTextView
                    android:id="@+id/place_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123 Test Street"
                    android:textColor="@android:color/white"
                    android:visibility="gone"/>

            </LinearLayout>

            <ImageButton
                android:layout_width="match_parent"
                app:srcCompat="@drawable/close_icon"
                android:id="@+id/close_button"
                android:background="#00000000"
                android:padding="10dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:id="@+id/bottom_layout"
        android:gravity="center_vertical"
        android:paddingRight="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_button_layout">

            <ImageButton
                android:layout_width="match_parent"
                app:srcCompat="@drawable/flip_camera"
                android:id="@+id/toggle_camera"
                android:background="#00000000"
                android:layout_margin="10dp"
                android:layout_height="50dp"
                android:padding="10dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/snap_icon"
                android:background="#00000000"
                android:id="@+id/capture"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <ImageButton
                android:layout_width="match_parent"
                app:srcCompat="@drawable/flash_auto"
                android:id="@+id/toggle_flash"
                android:background="#00000000"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_height="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bottom_label_layout"
            android:gravity="center_vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:id="@+id/scanner_layout"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mode_icon"
                    android:id="@+id/scanner_selected_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"/>

                <com.agilx.companycam.util.views.VerticalTextView
                    android:id="@+id/scanner_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SCANNER"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-light"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:id="@+id/camera_layout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mode_icon"
                    android:id="@+id/camera_selected_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"/>

                <com.agilx.companycam.util.views.VerticalTextView
                    android:id="@+id/camera_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CAMERA"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-light"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:id="@+id/fastcam_layout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mode_icon"
                    android:id="@+id/fastcam_selected_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"/>

                <com.agilx.companycam.util.views.VerticalTextView
                    android:id="@+id/fastcam_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FASTCAM"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-light"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
